# Allow specific commands without password
<insert-username> ALL=(ALL) NOPASSWD: /usr/bin/apt, /usr/bin/timeshift, /usr/bin/timeshift-gtk

# System control commands that don't require password
Cmnd_Alias SYSTEM_CTRL = /usr/bin/systemctl, /usr/sbin/service, /usr/sbin/reboot, /usr/sbin/shutdown, /usr/sbin/poweroff, /usr/bin/systemctl hibernate

# Disk management commands that don't require password
Cmnd_Alias DISK_MGMT = /usr/sbin/fdisk, /usr/sbin/mkfs.ext4, /usr/bin/mount, /usr/bin/umount

# Define command aliases for hosts file operations
Cmnd_Alias HOSTS_EDIT = /bin/vim /etc/hosts, /bin/vi /etc/hosts, /bin/nano /etc/hosts, /bin/echo * > /etc/hosts, /bin/echo * >> /etc/hosts

# Critical security commands that always require password
Cmnd_Alias CRITICAL_SECURITY = /usr/bin/su, /usr/bin/sudo su, /usr/bin/passwd, /usr/bin/passwd root

# Allow NOPASSWD for system control and disk management
<insert-username> ALL=(ALL) NOPASSWD: SYSTEM_CTRL, DISK_MGMT

# Require password for specific security-sensitive operations
<insert-username> ALL=(ALL) /usr/sbin/ufw
<insert-username> ALL=(ALL) HOSTS_EDIT
<insert-username> ALL=(ALL) CRITICAL_SECURITY
